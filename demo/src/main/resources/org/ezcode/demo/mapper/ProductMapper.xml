<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ezcode.demo.mapper.ProductMapper">
<select id="selectAll" resultType="org.ezcode.demo.domain.ProductVO">
    select 
    *
    from
    tbl_product
    where pno > 0
    order by pno desc
    limit #{skip}, #{amount}
</select>

<select id="getCount" resultType="int">
    select 
    count(*)
    from
    tbl_product
    where pno > 0
</select>
</mapper>